<?import javafx.scene.layout.*?>

<?import app.components.Search?>
<?import app.components.SideBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.App"
>
    <top>
        <Search/>
    </top>
    <left>
        <SideBar fx:id="side"/>
    </left>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false">
            <FlowPane vgap="20" hgap="50" fx:id="cardCont">
                <padding>
                    <Insets top="10" bottom="10" left="50" right="50"/>
                </padding>
            </FlowPane>
        </ScrollPane>

    </center>
</BorderPane>
